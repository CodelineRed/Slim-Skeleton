{% extends "layout/layout.html.twig" %}

{% block content %}
    <br><br>
    <label for="tf_code">{{ 'auth-code'|trans }}</label>
    <form action="{{ path_for('user-two-factor-' ~ lc) }}" method="post" autocomplete="off">
        <input type="hidden" name="{{ csrf.keys.name }}" value="{{ csrf.name }}">
        <input type="hidden" name="{{ csrf.keys.value }}" value="{{ csrf.value }}">
        <input type="text" name="tf_code" id="tf_code" placeholder="{{ 'code'|trans }}" autofocus="autofocus" />
        <input type="submit" name="send" value="{{ 'submit'|trans }}" />
    </form>
{% endblock %}