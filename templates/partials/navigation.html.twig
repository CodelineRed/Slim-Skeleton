<div>
    <a class="{% if is_current_path('page-index' ~ glk) %}current{% endif %}" href="{{ path_for('page-index' ~ glk) }}">{{ trans('page-index' ~ ns) }}</a> &#124;
    <a class="{% if is_current_path('page-example' ~ lk) %}current{% endif %}" href="{{ path_for('page-example' ~ lk) }}">{{ trans('page-example' ~ ns) }}</a> &#124;

    {% if has_role('guest') %}
        <a class="{% if is_current_path('user-login' ~ glk) %}current{% endif %}" href="{{ path_for('user-login' ~ glk) }}">{{ trans('user-login' ~ ns) }}</a>
    {% endif %}

    {% if has_role({0: 'member', 1: 'admin', 2: 'superadmin'}) %}
        <a class="{% if is_current_path('user-show' ~ lk, { 'name': name }) or is_current_path('user-show' ~ lk) %}current{% endif %}" href="{{ path_for('user-show' ~ lk) }}">{{ trans('user-show' ~ ns) }}</a> &#124;
        <a class="{% if is_current_path('user-logout' ~ glk) %}current{% endif %}" href="{{ path_for('user-logout' ~ glk) }}">{{ trans('user-logout' ~ ns) }}</a>
    {% endif %}
</div>