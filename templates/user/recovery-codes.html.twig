{% extends "layouts/layout.html.twig" %}

{% block content %}
    <br/>
    {{ 'recovery-codes'|trans|raw }}<br/>
    <br/>
    {# loop through records #}
    {% if recoveryCodes %}
        {% for recoveryCode in recoveryCodes %}
            {{ recoveryCode }}<br/>
        {% endfor %}
    {% endif %}
    <br/>
    {{ 'back-to'|trans({0: 'm'}) }} <a href="{{ path_for('user-show-' ~ lc) }}">{{ trans('user-show-label') }}</a>.
{% endblock %}