{# lc = locale code #}
{% set lc = locale() %}
{# glc = generic locale code #}
{% set glc = generic_locale() %}
{% htmlcompress %}
<!DOCTYPE html>
<html lang="{{ current_locale()|slice(0, 2) }}" class="locale-process-{{ localeProcess }}">
    <head>
        <meta charset="utf-8"/>
        <title>Slim 3 Skeleton - InsanityMeetsHH</title>
        <link href="//fonts.googleapis.com/css?family=Roboto:300" rel="stylesheet" type="text/css">
        <link href="{{ base_url() }}/css/styles.css?v=5.2.0" rel="stylesheet" type="text/css">
        <script src="https://www.google.com/recaptcha/api.js?hl={{ current_locale() }}"></script>
    </head>
    <body>
        <header>
            <h2>Slim 3 Skeleton - InsanityMeetsHH</h2>
            {{ include('partials/langswitch.html.twig') }}
            {{ include('partials/navigation.html.twig') }}
            {{ include('partials/flash-message.html.twig') }}
        </header>
        <main>
            {% block content %}{% endblock %}
        </main>
        <footer>
             <a href="https://github.com/InsanityMeetsHH/Slim-Skeleton" target="_blank">GitHub</a>
             <a href="https://packagist.org/packages/insanitymeetshh/slim-skeleton" target="_blank">Packagist</a>
        </footer>
        <script src="{{ base_url() }}/js/scripts.js?v=5.2.0"></script>
    </body>
</html>
{% endhtmlcompress %}

