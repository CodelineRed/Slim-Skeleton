{
    "name": "insanitymeetshh/slim-skeleton",
    "description": "Slim Framework skeleton + Doctrine + Twig + Localisation",
    "keywords": ["microframework", "rest", "router", "psr7", "doctrine", "twig", "localisation"],
    "homepage": "https://github.com/InsanityMeetsHH/Slim-Skeleton",
    "license": "MIT",
    "authors": [
        {
            "name": "InsanityMeetsHH",
            "email": "software@insanitymeetshh.net",
            "homepage": "http://www.insanitymeetshh.net/"
        }
    ],
    "require": {
        "php": ">=5.5.0",
        "slim/slim": "^3.1",
        "monolog/monolog": "^1.17",
        "slim/twig-view": "^2.3",
        "doctrine/orm": "^2.6"
    },
    "require-dev": {
        "phpunit/phpunit": ">=4.8 < 6.0"
    },
    "autoload": {
        "psr-4": {
            "Vendor\\Bundle\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "config": {
        "process-timeout" : 0
    },
    "scripts": {
        "start": "php -S localhost:8080 -t public public/index.php",
        "test": "phpunit"
    }

}
